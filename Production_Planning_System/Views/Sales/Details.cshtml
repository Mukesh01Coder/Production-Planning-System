@model Production_Planning_System.Models.Sales

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-8 mx-auto py-4">
    <div class="card">
        <div class="card-header text-center bg-primary text-uppercase text-white">
            <h1>Sales Details </h1>
        </div>
        <div class="card-body">
            <div>

                <img src="~/Images/@Model.ImageName"
                     height="100" width="90"
                     asp-append-version="true" />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.order_num)
                    </dt>

                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.order_num)
                    </dd>
                    <br />
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Demand)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Demand)
                    </dd>
                    <br />
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Oder_Type)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Oder_Type)
                    </dd>
                    <br />
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.sales_Id" class="btn btn-sm btn-primary rounded-2 text-uppercase">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.sales_Id" class="btn btn-sm btn-danger rounded-2 text-uppercase">Delete</a>
                <a asp-action="Index" class="btn btn-sm btn-info rounded-2 text-uppercase text-white"><i class="fas fa-fast-backward"></i> Back to List</a>

            </div>

        </div>
    </div>
</div>



