<div class="col-md-10 mx-auto py-4">
    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white">
            <h4>Add New Sales</h4>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-md-4">
                    <form enctype="multipart/form-data" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="order_num" class="control-label"></label>
                            <input asp-for="order_num" class="form-control" />
                            <span asp-validation-for="order_num" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Demand" class="control-label"></label>
                            <input asp-for="Demand" class="form-control" />
                            <span asp-validation-for="Demand" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Oder_Type" class="control-label"></label>
                            <input asp-for="Oder_Type" class="form-control" />
                            <span asp-validation-for="Oder_Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProfilePicture" class="control-label"></label>

                            <div id="chooseFile">
                                <input class="form-control" type="file" name="ProfileImage" />
                            </div>
                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-primary rounded-2 text-uppercase" />
                            <a asp-action="Index" class="btn btn-sm btn-info rounded-2 text-white text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





