@model Production_Planning_System.Models.Sales

@{
    ViewData["Title"] = "Edit";
   // Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6 mx-auto py-4">
    <div class="card">
        <div class="card-header text-center bg-primary text-uppercase text-white">
            <h1>Update Sales Details </h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <form enctype="multipart/form-data"  asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="sales_Id" />
                        <div class="form-group">
                            <label asp-for="order_num" class="control-label"></label>
                            <input asp-for="order_num" class="form-control" />
                            <span asp-validation-for="order_num" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Demand" class="control-label"></label>
                            <input asp-for="Demand" class="form-control" />
                            <span asp-validation-for="Demand" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Oder_Type" class="control-label"></label>
                            <input asp-for="Oder_Type" class="form-control" />
                            <span asp-validation-for="Oder_Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">ProfilePicture</label>
                            <div id="chooseFile">
                                <input class="form-control" type="file" name="ProfileImage" />
                            </div>
                        </div>
                      <br />
                        <div class="form-group">
                            <input type="submit" value="Savet" class="btn btn-sm btn-primary rounded-2 text-uppercase" />
                            <a asp-action="Index" class="btn btn-sm btn-info rounded-2 text-uppercase text-white"><i class="fas fa-fast-backward"></i> Back to List</a>
                        </div>
                    </form>
                </div>
            </div>

          
        </div>
    </div>
</div>






