@model Production_Planning_System.Models.Production

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 mx-auto py-4">
    <div class="card">
        <div class="card-header text-center bg-primary text-uppercase text-white">
            <h4>Are you sure you want to delete this Product?</h4>
        </div>
        <div class="card-body">
            <div>
                <img src="~/Images/@Model.ImageName"
                     height="100" width="90"
                     asp-append-version="true" />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Product_Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Product_Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Product_Shape)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Product_Shape)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Product_Color)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Product_Color)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Product_Quantity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Product_Quantity)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Product_Id" />
                    <input type="submit" value="Delete" class="btn btn-sm btn-danger rounded-2 text-uppercase" />
                    <a asp-action="Index" class="btn btn-sm btn-info rounded-2 text-uppercase text-white">Back to List</a>
                </form>
            </div>

          
        </div>
    </div>
</div>

